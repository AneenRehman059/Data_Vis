<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAF9F6"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/store_name"
                android:text="Shop Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/gilroy_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/store_name"
                    android:id="@+id/shop_description"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Address"
                    android:fontFamily="@font/gilory_semibold"
                    android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_call"
                android:layout_below="@id/store_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/map_icon_bg"
                android:elevation="5dp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_phone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_map"
                android:layout_below="@id/store_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:fontFamily="@font/gilory_semibold"
                android:background="@drawable/map_icon_bg"
                android:elevation="5dp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/location_on_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilory_semibold"
                android:layout_below="@+id/shop_description"
                android:id="@+id/txt_shop_visitFrequency"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Visit Frequency"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilory_semibold"
                android:layout_below="@+id/txt_shop_visitFrequency"
                android:id="@+id/txt_lastVisited_date"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Last Visited Date"
                android:textColor="@color/black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>