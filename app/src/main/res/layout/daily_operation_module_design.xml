<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp">
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/iv_single_mod"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bottles"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_single_mod"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:textSize="10sp"
        android:maxHeight="@dimen/_15sdp"
        android:layout_below="@+id/iv_single_mod"
        android:text="SKU Availability"
        android:layout_marginTop="@dimen/_5sdp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_compaign"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_below="@+id/tv_single_mod"
        android:layout_centerInParent="true"/>
</RelativeLayout>